{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "build",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
